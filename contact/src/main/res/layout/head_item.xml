<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="#fff"
              android:orientation="vertical">

    <include
            android:id="@+id/search_root"
            layout="@layout/layout_search_head"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_8"
            android:background="#fff"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/mLlNewFriend"
                style="@style/LinearchLayout_press_color">

            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/icon_new_friend"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="新朋友"
                    android:textColor="#333"
                    android:textSize="@dimen/s_17"/>

            <cn.jiguang.imui.view.RoundTextView
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_15"
                    android:layout_marginLeft="@dimen/d_8"
                    app:backgroundColor="@color/qmui_config_color_red"
                    android:layout_marginRight="@dimen/d_30"
                    android:text="new"
                    android:gravity="center"
                    app:cornerRadius="@dimen/d_6"
                    android:textStyle="italic"
                    android:textSize="@dimen/s_12"
                    android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/mLlGroupChat"
                style="@style/LinearchLayout_press_color">

            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/icon_group_chat"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="群聊"
                    android:textColor="#333"
                    android:textSize="@dimen/s_17"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/mLlBlackList"
                style="@style/LinearchLayout_press_color"
                android:layout_marginBottom="@dimen/d_15">

            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/icon_blacklist"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="黑名单"
                    android:textColor="#333"
                    android:textSize="@dimen/s_17"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>