<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F6F6F6"
              android:orientation="vertical">
    <com.qmuiteam.qmui.widget.QMUITopBarLayout
            android:id="@+id/qmui_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:qmui_topbar_title_text_size="@dimen/s_17"
            app:qmui_topbar_title_color="@color/color_333"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginLeft="15dp">

            <TextView
                    android:textColor="@color/color_333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="设置为管理员"
                    android:textSize="17dp"/>

            <android.support.v7.widget.SwitchCompat
                    android:id="@+id/mManagerSwitch"
                    android:layout_width="66dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/color_C2CCDE"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginLeft="15dp">

            <TextView
                    android:textColor="@color/color_333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="禁言该用户7天"
                    android:textSize="17dp"/>

            <android.support.v7.widget.SwitchCompat
                    android:id="@+id/mSevenDaySwitch"
                    android:layout_width="66dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/color_C2CCDE"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginLeft="15dp">

            <TextView
                    android:textColor="@color/color_333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="永久禁言该用户"
                    android:textSize="17dp"/>

            <android.support.v7.widget.SwitchCompat
                    android:id="@+id/mForeverSwitch"
                    android:layout_width="66dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>