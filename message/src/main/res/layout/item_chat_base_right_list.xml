<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:id="@+id/mTvTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_22"
            android:gravity="center"
            android:text="08:30"
            android:textSize="@dimen/s_11"
            android:textColor="#FF9A9A9A"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingRight="@dimen/d_10"
            android:layout_marginTop="@dimen/d_10"
            android:layout_marginBottom="@dimen/d_10"
            android:layout_marginLeft="@dimen/d_60">
        <ViewStub
                android:id="@+id/right_chat_viewstub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_60"
                android:layout_marginTop="@dimen/d_5"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mIvAvatar"
                android:layout_width="@dimen/d_48"
                android:layout_height="@dimen/d_48"
                android:src="@mipmap/icon_default_head"
                android:layout_marginLeft="@dimen/d_5"/>
    </LinearLayout>

</LinearLayout>