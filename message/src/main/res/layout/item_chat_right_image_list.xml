<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:gravity="center_vertical|right"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/mIvError"
            android:layout_width="@dimen/d_35"
            android:layout_height="@dimen/d_35"
            android:src="@drawable/aurora_send_msg_error"
            android:layout_marginRight="@dimen/d_5"/>

    <ProgressBar
            android:id="@+id/mProgressBar"
            android:layout_width="@dimen/d_35"
            android:layout_height="@dimen/d_35"
            android:layout_marginRight="@dimen/d_5"
            android:visibility="visible"/>

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/mIvImage"
            android:layout_width="@dimen/d_150"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_default_head"
            android:adjustViewBounds="true"
            app:riv_corner_radius="@dimen/d_10"/>

</LinearLayout>