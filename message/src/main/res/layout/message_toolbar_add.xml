<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="@dimen/d_250"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/d_20"
              android:paddingBottom="@dimen/d_20"
              android:paddingLeft="@dimen/d_20"
              android:background="@mipmap/ic_bg_friend"
              android:orientation="vertical">

        <com.dxjia.library.ImageTextButton
                android:id="@+id/btn_group_chat"
                style="@style/message_TextImageButton_1"
                app:itb_text="创建群聊           "
                app:itb_icon="@mipmap/ic_gray_circle_add"/>

        <com.dxjia.library.ImageTextButton
                android:id="@+id/btn_add_friend"
                style="@style/message_TextImageButton_1"
                app:itb_text="加好友/群           "
                app:itb_icon="@mipmap/ic_gray_friend_add"/>

        <com.dxjia.library.ImageTextButton
                android:id="@+id/btn_scan"
                style="@style/message_TextImageButton_1"
                app:itb_text="扫一扫         "
                app:itb_icon="@mipmap/ic_gray_scan"/>
</LinearLayout>