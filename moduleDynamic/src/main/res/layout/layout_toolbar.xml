<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_70"
    android:background="@color/white"
    android:paddingTop="@dimen/d_20"
    app:contentInsetStart="0dp">

    <LinearLayout
        android:id="@+id/mToolbarBack"
        android:layout_width="@dimen/d_50"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="@dimen/d_16"
            android:layout_height="@dimen/d_16"
            android:layout_marginLeft="@dimen/d_15"
            android:src="@mipmap/icon_arrow_left"/>
    </LinearLayout>

    <TextView
        android:id="@+id/mToolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="自定义名称"
        android:textStyle="bold"
        android:textColor="#030303"
        android:textSize="@dimen/s_17" />

    <TextView
        android:id="@+id/mToolbarRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:text="发布"
        android:background="@color/color_theme"
        android:paddingLeft="@dimen/d_10"
        android:paddingRight="@dimen/d_10"
        android:paddingTop="@dimen/d_5"
        android:paddingBottom="@dimen/d_5"
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/d_15"
        android:textSize="@dimen/s_14" />
</android.support.v7.widget.Toolbar>