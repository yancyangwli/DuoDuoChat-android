<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
            android:id="@+id/qmui_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_70"
            android:paddingTop="@dimen/d_20"
            app:qmui_topbar_title_text_size="@dimen/s_17"
            app:qmui_topbar_title_color="#030303"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_20"
            android:background="@mipmap/ic_shade_bg"/>

    <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@drawable/my_shape_feed_bg"
            android:layout_width="345dp"
            android:layout_height="151dp">

        <EditText
                android:id="@+id/mContentEt"
                android:textSize="14dp"
                android:textColor="@color/my_color_000000"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/my_color_9A9A9A"
                android:hint="请输入你的建议（250字以内）"
                android:background="@null"
                android:padding="@dimen/d_10"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="10dp">

        <Button xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mBtnConfirm"
                android:layout_width="325dp"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="提交"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                app:corners_radius="23dp"
                app:gradient_angle="0"
                app:gradient_centerColor="@color/my_color_11DBFF"
                app:gradient_endColor="@color/my_color_11DBFF"
                app:gradient_startColor="@color/my_color_11DBFF"
                app:ripple_color="@color/my_color_F2F3F8"
                app:ripple_enable="true"
                app:shape="rectangle"
                tools:ignore="MissingPrefix"/>
    </RelativeLayout>


</LinearLayout>