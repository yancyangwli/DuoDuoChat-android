<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/my_title_layout"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_20"
            android:background="@mipmap/ic_shade_bg"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

        <TextView
                style="@style/TextView_right_icon"
                android:text="关于我们"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/my_color_C2CCDE"/>

        <TextView
                android:id="@+id/mTvFeedback"
                style="@style/TextView_right_icon"
                android:text="意见反馈"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/my_color_F2F3F8"></View>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginLeft="15dp">

            <TextView
                    android:textColor="@color/my_color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="是否允许被添加好友"
                    android:textSize="17dp"/>

            <android.support.v7.widget.SwitchCompat
                    android:id="@+id/mAddFriendSwitch"
                    android:layout_width="66dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/my_color_C2CCDE"></View>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginLeft="15dp">

            <TextView
                    android:textColor="@color/my_color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="是否显示群聊通知提醒"
                    android:textSize="17dp"/>

            <android.support.v7.widget.SwitchCompat
                    android:id="@+id/mShowGroupNoticeSwitch"
                    android:layout_width="66dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/my_color_F2F3F8"></View>

        <TextView
                android:id="@+id/mTvModifyPsw"
                style="@style/TextView_right_icon"
                android:text="修改密码"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/my_color_C2CCDE"></View>

        <TextView
                android:id="@+id/mTvClearCache"
                style="@style/TextView_right_icon"
                android:text="清除缓存"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

        <Button
                android:id="@+id/mBtnOut"
                style="@style/Btn_shadow_bg"
                android:text="退出登陆"
                android:layout_marginBottom="@dimen/d_35"/>
    </LinearLayout>


</LinearLayout>