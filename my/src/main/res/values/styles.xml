<resources>

    <!-- Base application theme. -->
    <style name="my_AppBaseTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/my_colorPrimary</item>
        <item name="colorPrimaryDark">@color/my_colorPrimaryDark</item>
        <item name="colorAccent">@color/my_color_11DBFF</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="my_AppTheme" parent="my_AppBaseTheme"></style>


    <style name="my_AppThemes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:divider">@color/my_colorDivision</item>
        <item name="android:background">@color/my_colorDivision</item>
    </style>
    
    <style name="TextView_right_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_50</item>
        <item name="android:drawableEnd">@mipmap/ic_arrow_right</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">@dimen/s_17</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/d_15</item>
        <item name="android:paddingRight">@dimen/d_15</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_press_color</item>
    </style>

    <style name="LinearLayout_mine_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_30</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/d_15</item>
        <item name="android:paddingRight">@dimen/d_15</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_press_color</item>
    </style>

    <style name="TextView_mine_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/my_color_333333</item>
        <item name="android:textSize">@dimen/s_14</item>
        <item name="android:layout_marginLeft">@dimen/d_15</item>
    </style>

</resources>
