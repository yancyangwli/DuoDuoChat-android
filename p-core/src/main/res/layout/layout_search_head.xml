             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="@dimen/d_15">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_36"
            android:layout_marginTop="@dimen/d_15"
            android:layout_marginLeft="@dimen/d_15"
            android:layout_marginRight="@dimen/d_15"
            android:layout_marginBottom="@dimen/d_5"
            android:background="@drawable/common_shape_constace_search"
            android:gravity="center">

        <ImageView
                android:layout_width="@dimen/d_17"
                android:layout_height="@dimen/d_17"
                android:src="@mipmap/icon_search"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:textSize="@dimen/s_17"
                android:textColor="#9A9A9A"
                android:layout_marginLeft="@dimen/d_10"/>
    </LinearLayout>
